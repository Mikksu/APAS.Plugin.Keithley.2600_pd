<UserControl x:Class="APAS.Plugin.KEYTHLEY.SMU2600.Views.SingleChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:APAS.Plugin.KEYTHLEY.SMU2600.Converters"
             xmlns:local="clr-namespace:APAS.Plugin.KEYTHLEY.SMU2600"
             xmlns:models="clr-namespace:APAS.Plugin.KEYTHLEY.SMU2600.Models"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=models:SingleChannelViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>

        <converters:MeasureValueDisplayFormatConverter x:Key="ValueDisplayFormatConverter"/>
        <converters:SourceModeToBoolConverter x:Key="SourceModeToBool"/>
        <converters:SourceOutputToBoolConverter x:Key="SourceOutputToBool"/>
        <converters:SourceOutputToGroupBoxColorConverter x:Key="SourceOutputToGroupBoxColor"/>

        <ObjectDataProvider x:Key="VoltUnitEnum" MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:VoltUnitEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="CurrUnitEnum" MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:CurrentUnitEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="SourceModeEnum" MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:SourceModeEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ValueDisplayStyle" TargetType="TextBox" 
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="5,3"/>
        </Style>

        <Style x:Key="ValueSetStyle" TargetType="TextBox" 
               BasedOn="{StaticResource ValueDisplayStyle}">
 
        </Style>

        <Style x:Key="UnitSelectionStyle" TargetType="ComboBox" 
               BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,3"/>
        </Style>

        <Style x:Key="SourceModeSelectionStyle" TargetType="RadioButton"
            BasedOn="{StaticResource {x:Type RadioButton}}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="5 0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="测量">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="电压"
                       Style="{StaticResource CaptionTextStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                     Style="{StaticResource ValueDisplayStyle}">
                    <TextBox.Text>
                        <MultiBinding Converter="{StaticResource ValueDisplayFormatConverter}"
                                      Mode="OneWay">
                            <Binding Path="MeasuredV"/>
                            <Binding Path="VoltUnitSelected"/>
                        </MultiBinding>
                    </TextBox.Text>
                </TextBox>
                <ComboBox Grid.Row="1" Grid.Column="2" 
                      ItemsSource="{Binding Source={StaticResource VoltUnitEnum}}"
                      SelectedItem="{Binding VoltUnitSelected}"
                      Style="{StaticResource UnitSelectionStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="电流"
                       Style="{StaticResource CaptionTextStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                     Style="{StaticResource ValueDisplayStyle}">
                    <TextBox.Text>
                        <MultiBinding Converter="{StaticResource ValueDisplayFormatConverter}"
                                      Mode="OneWay">
                            <Binding Path="MeasuredA"/>
                            <Binding Path="CurrentUnitSelected"/>
                        </MultiBinding>
                    </TextBox.Text>
                </TextBox>
                <ComboBox Grid.Row="2" Grid.Column="2" 
                      ItemsSource="{Binding Source={StaticResource CurrUnitEnum}}"
                      SelectedItem="{Binding CurrentUnitSelected}"
                      Style="{StaticResource UnitSelectionStyle}"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="设置"
                  BorderBrush="{Binding IsON, 
            Converter={StaticResource SourceOutputToGroupBoxColor},
            ConverterParameter=Border}"
                  Background="{Binding IsON, 
            Converter={StaticResource SourceOutputToGroupBoxColor},
            ConverterParameter=Background}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="模式"
                           Style="{StaticResource CaptionTextStyle}"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton 
                        Content="I-Source" 
                        Style="{StaticResource SourceModeSelectionStyle}"
                        IsChecked="{Binding SourceMode, Mode=OneWay,
                        Converter={StaticResource SourceModeToBool},
                        ConverterParameter=ISource}"/>
                    <RadioButton 
                        Content="V-Source" 
                        Style="{StaticResource SourceModeSelectionStyle}"
                        IsChecked="{Binding SourceMode, Mode=OneWay,
                        Converter={StaticResource SourceModeToBool},
                        ConverterParameter=VSource}"/>
                </StackPanel>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="电压"
                           Style="{StaticResource CaptionTextStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Style="{StaticResource ValueSetStyle}">
                    <TextBox.Text>
                        <MultiBinding Converter="{StaticResource ValueDisplayFormatConverter}"
                                      Mode="OneWay">
                            <Binding Path="SourceVLevel"/>
                            <Binding Path="VoltUnitSelected"/>
                        </MultiBinding>
                    </TextBox.Text>
                </TextBox>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="输出"
                           Style="{StaticResource CaptionTextStyle}"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton 
                        Content="关闭" 
                        Style="{StaticResource SourceModeSelectionStyle}"
                        IsChecked="{Binding IsON, Mode=OneWay,
                        Converter={StaticResource SourceOutputToBool},
                        ConverterParameter=OFF}"/>
                    <RadioButton 
                        Content="打开" 
                        Style="{StaticResource SourceModeSelectionStyle}"
                        IsChecked="{Binding IsON, Mode=OneWay,
                        Converter={StaticResource SourceOutputToBool},
                        ConverterParameter=ON}"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="电流"
                           Style="{StaticResource CaptionTextStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         Style="{StaticResource ValueSetStyle}">
                    <TextBox.Text>
                        <MultiBinding Converter="{StaticResource ValueDisplayFormatConverter}"
                                      Mode="OneWay">
                            <Binding Path="SourceALevel"/>
                            <Binding Path="CurrentUnitSelected"/>
                        </MultiBinding>
                    </TextBox.Text>
                </TextBox>
            </Grid>

        </GroupBox>

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="ON" 
                    Command="{Binding TurnOnCommand}"/>
            <Button Grid.Column="1" Content="OFF"
                    Command="{Binding TurnOffCommand}"/>
        </Grid>
    </Grid>
</UserControl>
